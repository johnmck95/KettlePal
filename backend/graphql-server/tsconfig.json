{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "allowImportingTsExtensions": false,
    "baseUrl": "src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@mutations/*": ["mutations/*"],
      "@db/*": ["db/*"]
    }
  },
  "include": ["src", "knexfile.js", "knexfile.ts"],
  "exclude": ["node_modules", "dist"]
}
